<center><div class="row" id="betrow">
	<strong>
	<span class="col-xs-3">Betted On</span>
	<span class="col-xs-3">Amount</span>
	<span class="col-xs-3">Match</span>
	<span class="col-xs-3">Match Winner</span>
	</strong>
</div>
<% @bets.each do |bet| %>
	<% match = Match.find(bet.match_id) %>
	<div class="row" id="betrow">
		<span class="col-xs-3"><%= bet.team_name.titleize %></span>
		<span class="col-xs-3"><%= bet.amount %></span>
		<span class="col-xs-3"><%= match.hometeam %> vs <%= match.awayteam %></span>
		<span class="col-xs-3"><%= bet.winner %></span>
	</div>
<% end %>
</center>