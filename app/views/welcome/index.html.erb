<center><h1>Welcome</h1>
<p>Try your luck without spending a penny !</p>
<br/>
<div class="row">
	<div class="col-xs-6 col-md-4">
		<button class="btn btn-primary">
		<%= link_to "Show Matches", matches_path, {:style => 'color: #FFFFFF'} %>
		</button>
	</div>
	
	<div class="col-xs-6 col-md-4">
	<button class="btn btn-success">
	<%= link_to "Show Leaderboard", leaderboard_path, {:style => 'color: #FFFFFF'} %>
	</button>
	</div>
	
	<div class="col-xs-6 col-md-4">
		<button class="btn btn-default">
		<%= link_to "Instructions", instructions_path %>
		</button>
	</div>
	
	<% if current_user %>
	
		<div class="col-xs-6 col-md-4">
			<button class="btn btn-danger">
			<%= link_to "My Bets", show_user_bets_path, {:style => 'color: #FFFFFF'} %>
			</button>
		</div>
		
		<% if current_user.admin == true %>
		<div class="col-xs-6 col-md-4">
			<button class="btn btn-success">
				<%= link_to "Add Match", new_match_path, {:style => 'color: #FFFFFF'} %>
			</button>
		</div>
		<% end %>
			
	<% end %>
</div>
</center>