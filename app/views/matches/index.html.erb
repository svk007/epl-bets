<h1>Matches</h1>
<p>Just click on the match you want to bet on and continue. Make sure you sign up before ! </p>
<br/>
<% @matches.each_slice(4) do |m1,m2,m3,m4| %>
<div class="row">
	<div class="col-xs-12 col-sm-6 col-md-3">
		<% if !m1.nil? %>
		<div id="matchrow">
			<%= link_to match_path(m1) do %>
				<%= image_tag("#{m1.hometeam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchname"><br/><%= m1.hometeam %> vs <br/>
				<%= m1.awayteam %></span><br/>
				<%= image_tag("#{m1.awayteam}".downcase.gsub(" ", "-"), class: "matchicon") %><br/>
				<span id="matchdetails"><%= m1.stadium %>&nbsp;<%= m1.matchtime.strftime(" %B %d, %A at %H:%M") %></span>
			<% end %>
		<% end %>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-3">
		<% if !m2.nil? %>
		<div id="matchrow">
			<%= link_to match_path(m2) do %>
				<%= image_tag("#{m2.hometeam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchname"><br/><%= m2.hometeam %> vs <br/>
				<%= m2.awayteam %></span><br/>
				<%= image_tag("#{m2.awayteam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchdetails"><h6><%= m2.stadium %>&nbsp;<%= m2.matchtime.strftime(" %B %d, %A at %H:%M") %></h6></span>
			<% end %>
		<% end %>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-3">
		<% if !m3.nil? %>
		<div id="matchrow">
			<%= link_to match_path(m3) do %>
				<%= image_tag("#{m3.hometeam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchname"><br/><%= m3.hometeam %> vs <br/>
				<%= m3.awayteam %></span><br/>
				<%= image_tag("#{m3.awayteam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchdetails"><h6><%= m3.stadium %>&nbsp;<%= m3.matchtime.strftime(" %B %d, %A at %H:%M") %></h6></span>
			<% end %>
		<% end %>
		</div>
	</div>
	<div class="col-xs-12 col-sm-6 col-md-3">
		<% if !m4.nil? %>
		<div id="matchrow">
			<%= link_to match_path(m4) do %>
				<%= image_tag("#{m4.hometeam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchname"><br/><%= m4.hometeam %> vs <br/>
				<%= m4.awayteam %></span><br/>
				<%= image_tag("#{m4.awayteam}".downcase.gsub(" ", "-"), class: "matchicon") %>
				<span id="matchdetails"><h6><%= m4.stadium %>&nbsp;<%= m4.matchtime.strftime(" %B %d, %A at %H:%M") %></h6></span>
			<% end %>
		<% end %>
		</div>
	</div>
</div>
<br/>
<% end %>
